@model IEnumerable<Barbie.Core.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Категорії</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Додати Категорію
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Назва</th>
                <th>Барбі</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var m in Model)
            {
                <tr>
                    <td style="width:50%">@m.CategoryName</td>
                    <td style="width:30%"><a asp-controller="Barbie" asp-action="BarbiesInCategory" asp-route-id="@m.Id" class="btn btn-primary" style="color:pink;">Показати</a></td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@m.Id"
                            class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@m.Id"
                            class="btn btn-danger mx-2"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>